<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".fragments.SummaryFragment">

    <!-- Header -->
    <FrameLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/person"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="top"
            android:text=""
            android:fontFamily="sans-serif-light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:layout_gravity="bottom"
            android:text=""
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp" />
    </FrameLayout>

    <!-- Big Screen -->
    <RelativeLayout
        android:id="@+id/big_screen"
        android:layout_width="fill_parent"
        android:layout_height="650dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="85dp">

        <!-- Grid -->
        <LinearLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/lavender"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="top"
                            android:background="@color/white"
                            app:cardCornerRadius="25dp">

                            <ProgressBar
                                android:id="@+id/progressBarCalories"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_shape"
                                android:indeterminate="false"
                                android:textAlignment="center"
                                android:progressDrawable="@drawable/circular_bar">

                            </ProgressBar>

                            <TextView
                                android:id="@+id/progressTextCalories"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="---"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_gray"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="sans-serif-light"
                                android:text="Kalori Takibi"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/lavender"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="top"
                            android:background="@color/white"
                            app:cardCornerRadius="25dp">
                            <ProgressBar
                                android:id="@+id/progressBarCalendaries"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_shape"
                                android:indeterminate="false"
                                android:textAlignment="center"
                                android:progressDrawable="@drawable/circular_bar"/>
                            <TextView
                                android:id="@+id/progressTextCalendaries"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="---"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_gray"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="sans-serif-light"
                                android:text="Takvim"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/lavender"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="top"
                            android:background="@color/white"
                            app:cardCornerRadius="25dp">

                            <ProgressBar
                                android:id="@+id/progressBarStepCount"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_shape"
                                android:indeterminate="false"
                                android:textAlignment="center"
                                android:progressDrawable="@drawable/circular_bar"/>
                            <TextView
                                android:id="@+id/progressTextStepCount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="---"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_gray"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="sans-serif-light"
                                android:text="AdÄ±m Sayar"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/lavender"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="top"
                            android:background="@color/white"
                            app:cardCornerRadius="25dp">
                            <ProgressBar
                                android:id="@+id/progressBarSleptTime"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_shape"
                                android:indeterminate="false"
                                android:textAlignment="center"
                                android:progressDrawable="@drawable/circular_bar"/>
                            <TextView
                                android:id="@+id/progressTextSleptTime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="---"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_gray"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="sans-serif-light"
                                android:text="Uyku Durumu"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/lavender"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="top"
                            android:background="@color/white"
                            app:cardCornerRadius="25dp">

                            <ProgressBar
                                android:id="@+id/progressBarFitnessAct"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_shape"
                                android:indeterminate="false"
                                android:textAlignment="center"
                                android:progressDrawable="@drawable/circular_bar"/>
                            <TextView
                                android:id="@+id/progressTextFitnessAct"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="---"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_gray"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="sans-serif-light"
                                android:text="Egzersiz Durumu"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/lavender"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="top"
                            android:background="@color/white"
                            app:cardCornerRadius="25dp">
                            <ProgressBar
                                android:id="@+id/progressBarVKI"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_shape"
                                android:indeterminate="false"
                                android:textAlignment="center"
                                android:progressDrawable="@drawable/circular_bar"/>
                            <TextView
                                android:id="@+id/progressTextVKI"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="---"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_gray"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="sans-serif-light"
                                android:text="VKI"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>